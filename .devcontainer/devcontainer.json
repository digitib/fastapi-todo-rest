{
	"name": "Daily Rabbit API",
	"dockerComposeFile": [
		"../docker-compose.yml"
	],
	"service": "api",
	// the path VS Code should open by default when connected
	"workspaceFolder": "/workspace",
	// features to add to the dev container, see https://containers.dev/features
	"features": {},
	"runServices": [],
	"shutdownAction": "none",
	// add a line to `.bashrc` to start the terminal at the API application's source directory
	"postCreateCommand": "echo 'cd /workspace/api' >> ~/.bashrc",
	"customizations": {
		"vscode": {
			"extensions": [
				"eamodio.gitlens",
				"ms-python.python",
				"streetsidesoftware.code-spell-checker"
			]
		}
	}
}